@using DesignPattern.Mediator.MediatorPattern.Results;
@model List<GetAllProductQueryResult>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <table class="table table-border">
        <tr>
            <td>#</td>
            <td>ürün adı</td>
            <td>fiyatı</td>
            <td>stok sayısı</td>
            <td>stok türü</td>
            <td>kategori</td>
            <td>sil</td>
            <td>güncelle</td>
            <td>detaylar</td>

           
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                <td> <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                <td> <a href="#" class="btn btn-danger">Güncelle</a></td>
                <td> <a href="/Product/GetProduct/@item.ProductID" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct/" class="btn btn-danger">Yeni ürün girişi</a>

    </div>